@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>

        .sidebar {
            background-color: #343a40;
            color: #fff;
            position: absolute;
            top: -15px;
            bottom: 0;
            left: -100px;
            padding: 20px;
            width: 250px;
            overflow-y: auto;
            z-index: 1000;
        }

            .sidebar h2 {
                color: #ffc107;
                margin-bottom: 20px;
            }

            .sidebar ul {
                padding-left: 0;
                list-style-type: none;
            }

            .sidebar li {
                margin-bottom: 10px;
            }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                transition: background-color 0.3s, color 0.3s;
                display: block;
                padding: 10px;
                border-radius: 5px;
                width: 100%;
                height: 100%;
            }

                .sidebar a:hover {
                    background-color: #ffc107;
                    color: #343a40;
                }

        .main-content {
            margin-left: 270px;
            padding: 20px;
            background-color:none;!Important
            display:none;
        }
    </style>
</head>
<body>
    <header>
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="container">
                <h2 class="text-center">Admin Dashboard</h2>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a asp-area="Admin" asp-controller="Home" asp-action="ListTeacher">Teacher</a>
                    </li>
                    <li class="mb-2">
                        <a asp-area="Admin" asp-controller="Home" asp-action="ListStudent">Student</a>
                    </li>
                </ul>
@*                 <a class="btn btn-danger" asp-area="Home" asp-controller="Home" asp-action="Logout">Logout</a> *@
            </div>
        </div>
    </header>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </footer>
</body>
</html>
