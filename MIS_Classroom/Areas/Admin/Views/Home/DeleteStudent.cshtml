@model MIS_Classroom.Models.TechengineeMisStudent
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="management-title">Delete Student</h2>
<div>
    <p>Are you sure you want to delete the following teacher?</p>
    <p><strong>ID:</strong> @Model.StudentId</p>
    <p><strong>Name:</strong> @Model.Name</p>

    <form id="deleteStudentForm" asp-action="DeleteStudent" method="post">
        <input type="hidden" asp-for="StudentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>
