<!-- In Views/Admin/Home/Index.cshtml -->
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light">
            <div class="sidebar">
                <h2 class="mt-5">Admin Dashboard</h2>
                <select class="form-select mt-3" autofocus id="managementSelect">
                    <option value="teacher" >Teacher Management</option>
                    <option value="student">Student Management</option>
                    <option value="subject">Questions Management</option>
                </select>
            </div>
        </div>
        <!-- /Sidebar -->
        <!-- Main Content -->
        <div class="col-md-9">
            <div class="container mt-5">
                <!-- Management Section -->
                <div id="managementSection">
                    <!-- Content will be dynamically loaded here -->
                </div>
            </div>
        </div>
        <!-- /Main Content -->
    </div>
</div>

<!-- Bootstrap JS (optional) -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    // Sample data for teachers, students, and subjects (replace with real data from backend)
    const teachers = @Html.Raw(Json.Serialize(Model.TechengineeMisTeachers));
    const students = @Html.Raw(Json.Serialize(Model.TechengineeMisStudents));
    const subjects = @Html.Raw(Json.Serialize(Model.TechengineeMisSubjects));

    // Function to render teacher records
    function renderTeachers() {
        const teacherTableBody = $('#managementContent');
        teacherTableBody.empty();
        $.each(teachers, function (index, teacher) {
            const row = `
                                <tr>
                                    <td>${teacher.teacherId}</td>
                                    <td>${teacher.name}</td>
                                    <td>${teacher.email}</td>
                                    <td>${teacher.subjectCode}</td>
                                    <td>
                                        <button class="btn btn-sm btn-warning btn-management">Edit</button>
                                        <button class="btn btn-sm btn-danger btn-management">Delete</button>
                                    </td>
                                </tr>
                            `;
            teacherTableBody.append(row);
        });
    }

    // Function to render student records
    function renderStudents() {
        const studentTableBody = $('#managementContent');
        studentTableBody.empty();
        $.each(students, function (index, student) {
            const row = `
                                <tr>
                                    <td>${student.studentId}</td>
                                    <td>${student.name}</td>
                                    <td>${student.email}</td>
                                    <td>${student.semester}</td>
                                    <td>
                                        <button class="btn btn-sm btn-warning btn-management">Edit</button>
                                        <button class="btn btn-sm btn-danger btn-management">Delete</button>
                                    </td>
                                </tr>
                            `;
            studentTableBody.append(row);
        });
    }

    // Function to render subject records
    function renderSubjects() {
        const subjectTableBody = $('#managementContent');
        subjectTableBody.empty();
        $.each(subjects, function (index, subject) {
            const row = `
                                <tr>
                                        <td>${subject.subjectName}</td>
                                        <td>${subject.subjectCode}</td>

                                    <td>
                                        <button class="btn btn-sm btn-warning btn-management">Edit</button>
                                        <button class="btn btn-sm btn-danger btn-management">Delete</button>
                                    </td>
                                </tr>
                            `;
            subjectTableBody.append(row);
        });
    }

    // Function to switch between teacher, student, and subject management
    $('#managementSelect').change(function () {
        const selectedOption = $(this).val();
        if (selectedOption === 'teacher') {
            $('#managementSection').html(`
                                <h2 class="management-title">Teacher Management</h2>
                                <button class="btn btn-primary btn-management" id="addTeacherBtn">Add Teacher</button>
                                <table class="management-table table  mt-3">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Subject Code</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="managementContent">
                                        <!-- Teacher records will be displayed here -->
                                    </tbody>
                                </table>
                            `);
            renderTeachers();
        } else if (selectedOption === 'student') {
            $('#managementSection').html(`
                                <h2 class="management-title">Student Management</h2>
                                <button class="btn btn-primary btn-management" id="addStudentBtn">Add Student</button>
                                <table class="management-table table mt-3">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Semester</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="managementContent">
                                        <!-- Student records will be displayed here -->
                                    </tbody>
                                </table>
                            `);
            renderStudents();
        } else if (selectedOption === 'subject') {
            $('#managementSection').html(`
                                <h2 class="management-title">Subject Management</h2>
                                <button class="btn btn-primary btn-management" id="addSubjectBtn">Add Subject</button>
                                <table class="management-table mt-3">
                                    <thead>
                                        <tr>

                                            <th>Subjects</th>
                                            <th>Subject Code</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="managementContent">
                                        <!-- Subject records will be displayed here -->
                                    </tbody>
                                </table>
                            `);
            renderSubjects();
        }
    });

    // Event listener for Add Teacher button
    $(document).on('click', '#addTeacherBtn', function () {
        $('#managementSection').html(`
                            <h2 class="management-title">Add Teacher</h2>
                            <form id="addTeacherForm">
                                <div class="mb-3">
                                    <label for="teacherName" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="teacherName" required>
                                </div>
                                <div class="mb-3">
                                    <label for="teacherEmail" class="form-label">Email address</label>
                                    <input type="email" class="form-control" id="teacherEmail" required>
                                </div>
                                <div class="mb-3">
                                    <label for="subjectCode" class="form-label">Subject Code</label>
                                    <input type="text" class="form-control" id="subjectCode" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        `);
    });



    // Event listener for Add Teacher button
    $(document).on('click', '#addTeacherBtn', function (e) {

        e.preventDefault();
        const teacherName = $('#teacherName').val();
        const teacherEmail = $('#teacherEmail').val();

        // Here you can send an AJAX request to add the teacher to the database
        // After successful addition, you may want to refresh the teacher list

        // For demo purpose, let's render the teacher list again
        renderTeachers();


    });

    // Event listener for Add Student button
    $(document).on('click', '#addStudentBtn', function () {
        $('#managementSection').html(`
                        <h2 class="management-title">Add Student</h2>
                        <form id="addStudentForm">
                            <div class="mb-3">
                                <label for="studentName" class="form-label">Name</label>
                                <input type="text" class="form-control" id="studentName" required>
                            </div>
                            <div class="mb-3">
                                <label for="studentEmail" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="studentEmail" required>
                            </div>
                            <div class="mb-3">
                                <label for="semester" class="form-label">Semester</label>
                                <input type="text" class="form-control" id="semester" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    `);
    });



    // Event listener for Add Student button
    $(document).on('click', '#addStudentBtn', function () {
        e.preventDefault();
        const studentName = $('#studentName').val();
        const studentEmail = $('#studentEmail').val();
