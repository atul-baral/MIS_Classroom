@model List<MIS_Classroom.Models.TechengineeMisAnswer>

@{
    Layout = "/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Answers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2 class="mt-4">Question</h2>
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Question.QuestionsTxt</h5>
            </div>
        </div>

        <h2 class="mt-4">Answers</h2>
        @if (Model.Any())
        {
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Student Email</th>
                        <th>Answer</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var answer in Model)
                    {
                        <tr>
                            <td>@answer.Student.Name</td>
                            <td>@answer.Student.Email</td>
                            <td>@answer.AnswerTxt</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="mt-4">No answers found for this question.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
