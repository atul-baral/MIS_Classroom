@model MIS_Classroom.Areas.Student.Models.ViewQuestionsViewModel

<form method="post" asp-action="">
    <div class="form-group">
        <label for="SubjectId">Select Subject:</label>
        <select class="form-control" id="SubjectId" name="SubjectId">
            @foreach (var subject in Model.Subjects)
            {
                <option value="@subject.SubjectCode">@subject.SubjectName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">View Questions</button>
</form>

@if (Model.Questions != null && Model.Questions.Any())
{
    <h2>Questions:</h2>
    <ul>
        @foreach (var question in Model.Questions)
        {
            <li>@question.QuestionsTxt</li>
        }
    </ul>
}
else
{
    <p>No questions available for the selected subject.</p>
}
