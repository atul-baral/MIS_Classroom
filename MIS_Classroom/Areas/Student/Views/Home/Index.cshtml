@model MIS_Classroom.Areas.Student.Models.ViewQuestionsViewModel

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<form method="post" asp-action="Index">
    <div class="form-group">
        <label for="SubjectCode">Select Subject:</label>
        <select class="form-control" id="SubjectCode" name="SubjectCode">
            @foreach (var subject in Model.Subjects)
            {
                <option value="@subject.SubjectCode">@subject.SubjectName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">View Questions</button>
</form>

@if (Model.Questions != null && Model.Questions.Any())
{
    <h2>Questions:</h2>
    <ul>
        @foreach (var question in Model.Questions)
        {
            <li>@question.QuestionsTxt</li>
        }
    </ul>
}
else
{
    <p>No questions available for the selected subject.</p>
}
