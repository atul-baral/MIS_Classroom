@model MIS_Classroom.Areas.Student.Models.ViewQuestionsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Questions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Sidebar Styles */
        .sidebar {
            background-color: #343a40;
            padding: 20px;
            height: 100vh; /* Set sidebar height to full viewport height */
            position: absolute;
            top: -15px;
            bottom: 0;
            left: -100px;
            width: 250px;
            overflow-y: auto;
            z-index: 1000;
        }

            .sidebar h4 {
           
               
                margin-bottom: 20px;

            }

        .list-group-item {
            background-color: transparent;
            color: #fff; /* White */
            border: none; /* Remove border */
            border-radius: 0; /* Remove border-radius */
            transition: background-color 0.3s, color 0.3s; /* Smooth transition on hover */
        }

            .list-group-item:hover {
                background-color: #ffc107;
                color:white;
                ; /* Darker green on hover */
            }

        /* Content Styles */
        .content {
            padding: 20px;
            margin-left: 250px; /* Adjust margin to accommodate sidebar width */
        }

    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <h4 class="mb-4" style="color:#ffc107">Subject List</h4>
                <div class="list-group">
                    @foreach (var subject in Model.Subjects)
                    {
                        <a href="#" class="list-group-item list-group-item-action subject-item" data-subject-code="@subject.SubjectCode">@subject.SubjectName</a>
                    }
                </div>
            </div>
            <!-- Content -->
            <div class="col-md-9 content">
                <div id="questions-container">
                    <!-- Questions will be loaded dynamically here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".subject-item").click(function (e) {
                e.preventDefault();
                var subjectCode = $(this).data("subject-code");
                fetchQuestions(subjectCode);
            });

            function fetchQuestions(subjectCode) {
                $.ajax({
                    url: "@Url.Action("FetchQuestions", "Home")",
                    method: "GET",
                    data: { subjectCode: subjectCode },
                    success: function (data) {
                        $("#questions-container").html(data);
                    },
                    error: function (error) {
                        console.log("Error:", error);
                    }
                });
            }
        });
    </script>
</body>
</html>
