@model MIS_Classroom.Areas.Student.Models.ViewQuestionsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Questions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <!-- Sidebar -->
        <div class="sidebar">
            <h4 class="text-center">Subject List</h4>
            <div class="list-group">
                @foreach (var subject in Model.Subjects)
                {
                    <a href="#" class="list-group-item list-group-item-action subject-item" data-subject-code="@subject.SubjectCode">@subject.SubjectName</a>
                }
            </div>
        </div>
    </header>

    <!-- Main content -->
    <div class="content">
        <div id="questions-container">
            <!-- Questions will be loaded dynamically here -->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".subject-item").click(function (e) {
                e.preventDefault();
                var subjectCode = $(this).data("subject-code");
                fetchQuestions(subjectCode);
            });

            function fetchQuestions(subjectCode) {
                $.ajax({
                    url: "@Url.Action("FetchQuestions", "Home")",
                    method: "GET",
                    data: { subjectCode: subjectCode },
                    success: function (data) {
                        $("#questions-container").html(data);
                    },
                    error: function (error) {
                        console.log("Error:", error);
                    }
                });
            }
        });
    </script>
</body>
</html>
